{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": [
      "ES2022",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ],
}